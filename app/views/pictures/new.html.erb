<%= form_for @picture do |f| %>

  <p>
    <%= f.label :url, "URL", class: "form-label" %>
    <%= f.text_field :url %>
  </p>

  <p>
    <%= f.label :description, class: "form-label" %>
    <%= f.text_field :description %>
  </p>

  <p>
    <%= f.label :rating, class: "form-label" %>
    <%= f.text_field :rating %>
  </p>

  <p>
    <%= f.submit class: "form-button" %>
  </p>

<% end %>