<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<h2 class="form_header">Add Video</h2>
<%= form_for @video do |f| %>

  <% @video.errors.messages.each do |error| %>
 <p class="error"><%= error.last.first %></p>
  <% end %>

  <p>
    <%= f.label :url, "URL of Video", class: "form-label" %>
    <%= f.text_field :url %>
  </p>

  <p>
    <%= f.label :description, "Short Description", class: "form-label" %>
    <%= f.text_area :description, class: "description" %>
  </p>

  <p>
    <%= f.label :rating, class: "form-label" %>
    <%= f.text_field :rating, class: "rating_field" %>
  </p>

  <p>
    <%= f.submit "Add Video", class: "form-button" %>
  </p>

<% end %>